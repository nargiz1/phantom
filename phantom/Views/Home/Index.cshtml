@model HomeView
<div id="main">
    <div class="inner">
        <header>
            <h1>
                @Model.Banner.Title <a href="http://html5up.net">HTML5 UP</a>.
            </h1>
            <p>@Model.Banner.Text</p>
        </header>
        <section class="tiles">
            @for (int i = 0; i < Model.Projects.Count; i++)
            {
                <article runat="server" class="style@(ViewBag.Style<6?(ViewBag.Style+=1):((ViewBag.Style-=5)))">
                    <span class="image">
                        <img src="@Model.Projects[i].Image" alt="" />
                    </span>
                    <a href="/projects/index/@Model.Projects[i].Id">
                        <h2>@Model.Projects[i].Title</h2>
                        <div class="content">
                            <p>@Model.Projects[i].SubTitle</p>
                        </div>
                    </a>
                </article>
            }

        </section>
    </div>
</div>
